<div class="container" id="checkout-container">
    <% if (order && order.items.length > 0) { %>
        <form style="display: flex; gap: 80px;" action="/payment/<%= order._id %>" method="POST" class="chekoutForm">
            <!-- Coluna de Formulários (Endereço e Pagamento) -->
            <section class="checkout-forms-column">
                <div class="card">
                    <h4>Detalhes de Entrega</h4>
                    
                    <div class="form-group">
                        <label for="cep">CEP</label>
                        <div style="display: flex; gap: 10px; align-items: center;">
                            <input type="text" id="cep" name="endereco[cep]" class="form-control" placeholder="00000-000" value="<%= user.endereco ? user.endereco.cep : '' %>" required>
                            <button type="button" id="cep-button" class="btn">Consultar</button>
                            <div id="cep-spinner" class="spinner" style="display: none;"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="rua">Rua / Avenida</label>
                        <input type="text" id="rua" name="endereco[rua]" class="form-control"
                            value="<%= user.endereco ? user.endereco.rua : '' %>" required>
                    </div>

                    <div class="form-group">
                        <label for="numero">Número</label>
                        <input type="text" id="numero" name="endereco[numero]" class="form-control"
                            value="<%= user.endereco ? user.endereco.numero : '' %>" required>
                    </div>

                    <div class="form-group">
                        <label for="complemento">Complemento (opcional)</label>
                        <input type="text" id="complemento" name="endereco[complemento]" class="form-control"
                            value="<%= user.endereco ? user.endereco.complemento : '' %>" required>
                    </div>

                    <div class="form-group">
                        <label for="bairro">Bairro</label>
                        <input type="text" id="bairro" name="endereco[bairro]" class="form-control"
                            value="<%= user.endereco ? user.endereco.bairro : '' %>" required>
                    </div>

                    <div class="form-group">
                        <label for="cidade">Cidade</label>
                        <input type="text" id="cidade" name="endereco[cidade]" class="form-control"
                            value="<%= user.endereco ? user.endereco.cidade : '' %>" required>
                    </div>

                    <div class="form-group">
                        <label for="estado">Estado</label>
                        <input type="text" id="estado" name="endereco[estado]" class="form-control"
                            value="<%= user.endereco ? user.endereco.estado : '' %>" required>
                    </div>

                    <!--
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="saveAddress" name="saveAddress" value="true">
                            <label class="form-check-label" for="saveAddress">
                                Salvar este endereço para futuras compras
                            </label>
                        </div>
                    -->
                </div>
            </section>

            <!-- Coluna do Resumo do Pedido -->
            <aside class="summary-column">
                <div class="card" id="summary-card">
                    <h4>Resumo do Pedido</h4>
                    <div id="checkout-items-list">
                        <% order.items.forEach((item, index)=> { %>
                            <div class="checkout-item" style="display: flex; gap: 1rem; align-items: center; margin-bottom: 1rem;">

                                <img src="/products/images/<%= item.imagens[0] %>" alt="<%= item.nome %>"
                                    style="width: 60px; height: 60px; object-fit: cover; border-radius: var(--borda-radius);">

                                <div style="flex-grow: 1;">
                                    <p style="margin: 0; font-weight: bold;">
                                        <%= item.nome %>
                                    </p>
                                    <p style="margin: 0; font-size: 0.9rem;">Quantidade: <%= item.quantity %></p>
                                </div>
                                
                                <p style="margin: 0; font-weight: bold;">R$ <%= (parseFloat(item.preco) || item.quantity).toFixed(2).replace('.', ',' ) %>
                                </p>

                            </div>
                            <% }); %>
                    </div>
                    <hr style="margin: 1.5rem 0;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 1rem;">
                        <span>Subtotal (<%= totalItems %> itens)</span>
                        <strong>R$ <%= totalPrice.toFixed(2).replace('.', ',') %></strong>
                    </div>
                    <div style="display: flex; justify-content: space-between; font-size: 1.2rem; margin-bottom: 2rem;">
                        <span>Valor Total</span>
                        <strong>R$ <%= totalPrice.toFixed(2).replace('.', ',') %></strong>
                    </div>
                    <button type="submit" class="btn btn-destaque" style="width: 100%;">Finalizar Compra e Pagar</button>
                </div>
            </aside>

        </form>
        <% } else { %>
            <div class="card" style="text-align: center; padding: 4rem;">
                <h2>Nenhum produto selecionado para checkout.</h2>
                <p style="margin-top: 1rem; margin-bottom: 2rem;">Volte ao carrinho para selecionar os produtos que
                    deseja comprar.</p>
                <a href="/cart" class="btn btn-destaque">Voltar ao Carrinho</a>
            </div>
            <% } %>
</div>

<script>
    const cepInput = document.getElementById('cep');
    const cepButton = document.getElementById('cep-button');
    const cepSpinner = document.getElementById('cep-spinner');

    cepButton.addEventListener('click', () => {
        consultarCEP(cepInput.value);
    });

    async function consultarCEP(cep) {
        const cepLimpo = cep.replace(/\D/g, ''); // Remove caracteres não numéricos

        if (cepLimpo.length !== 8) {
            alert('CEP inválido. Por favor, digite um CEP com 8 dígitos.');
            return;
        }

        const url = `/cep/${cep}`;

        cepSpinner.style.display = 'block';
        cepButton.disabled = true;
        cepButton.textContent = 'Buscando...';

        try {
            const response = await fetch(url);
            const responseData = await response.json();

            if (!response.ok || !responseData.success) {
                throw new Error(responseData.message || 'CEP não encontrado');
            }

            const address = responseData.data;

            document.getElementById('rua').value = address.rua || '';
            document.getElementById('bairro').value = address.bairro || '';
            document.getElementById('cidade').value = address.cidade || '';
            document.getElementById('estado').value = address.estado || '';

            document.getElementById('numero').focus();

        } catch (error) {
            console.error('Falha ao consultar o CEP:', error.message);
            alert(error.message);
            limparCampos();
        } finally {
            cepSpinner.style.display = 'none';
            cepButton.disabled = false;
            cepButton.textContent = 'Consultar';
        }
    }

    function limparCampos() {
        document.getElementById('rua').value = '';
        document.getElementById('bairro').value = '';
        document.getElementById('cidade').value = '';
        document.getElementById('estado').value = '';
    }

    function showPaymentMethod(method) {
        document.querySelectorAll('.payment-method').forEach(tab => {
            tab.classList.remove('active');
        });
        document.querySelector(`.payment-method[onclick="showPaymentMethod('${method}')"]`).classList.add('active');
        document.getElementById(method).checked = true;
    }
</script>

<style>
    .payment-methods {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid var(--cor-borda);
    }

    .payment-method {
        padding: 1rem 1.5rem;
        cursor: pointer;
        border-bottom: 3px solid transparent;
        font-weight: bold;
        color: var(--cor-secundaria);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .payment-method.active,
    .payment-method:hover {
        color: var(--cor-destaque);
        border-bottom-color: var(--cor-destaque);
    }

    .spinner {
        border: 4px solid rgba(0, 0, 0, 0.1);
        width: 24px;
        height: 24px;
        border-radius: 50%;
        border-left-color: var(--cor-destaque);
        animation: spin 1s ease infinite;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }

    @media (max-width: 992px) {
        .container div[style*="grid"] {
            grid-template-columns: 1fr;
        }

        .summary-column {
            order: -1;
        }
    }
</style>